{
    "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Tun Installer",
    "version": "0.1.0",
    "identifier": "com.newtun.tuninstaller",
    "build": {
        "frontendDist": "../../../dist/installer-builder/browser",
        "devUrl": "http://localhost:4200",
        "beforeDevCommand": "ng s installer-builder",
        "beforeBuildCommand": "ng build installer-builder"
    },
    "app": {
        "windows": [
            {
                "title": "Tun Installer",
                "width": 600,
                "height": 400,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "maximized": false,
                "decorations": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "nsis",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": ["resources/"],
        "windows": {
            "nsis": {
                "installMode": "perMachine",
                "installerIcon": "icons/icon.ico"
            }
        }
    }
}
