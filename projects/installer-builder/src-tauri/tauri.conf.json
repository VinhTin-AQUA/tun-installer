{
    "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Installer Builder",
    "version": "0.1.0",
    "identifier": "com.newtun.installerbuilder",
    "build": {
        "frontendDist": "../../../dist/installer-builder/browser",
        "devUrl": "http://localhost:4200",
        "beforeDevCommand": "ng s installer-builder",
        "beforeBuildCommand": "ng build installer-builder"
    },
    "app": {
        "windows": [
            {
                "title": "Installer Builder",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "maximized": false,
                "decorations": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
