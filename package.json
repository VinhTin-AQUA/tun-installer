{
    "name": "tun-installer",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "build-all-lib": "ng build data-access && ng build api-contracts && ng build service",
        "tauri": "tauri",
        "tauri:dev:builder": "tauri dev --config projects/installer-builder/src-tauri/tauri.conf.json -- --package installer_builder --bin installer_builder -- --debug-mode --channel beta --env production",
        "tauri:dev:template": "tauri dev --config projects/installer-template/src-tauri/tauri.conf.json -- --package installer_template --bin installer_template -- --status uninstall",
        "tauri:build:builder": "tauri build --config projects/installer-builder/src-tauri/tauri.conf.json -- --package installer_builder --bin installer_builder",
        "tauri:build:template": "tauri build --no-bundle --config projects/installer-template/src-tauri/tauri.conf.json -- --target x86_64-pc-windows-msvc --package installer_template --bin installer_template",
        "cargo:build:builder": "cargo build -p installer_builder --bin installer_builder",
        "cargo:build:template": "cargo build -p installer_template --bin installer_template",
        "cargo:dev:cleaner": "cargo run -p cleaner"
    },
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "overrides": [
            {
                "files": "*.html",
                "options": {
                    "parser": "angular"
                }
            }
        ]
    },
    "private": true,
    "packageManager": "npm@11.6.1",
    "dependencies": {
        "@angular/common": "^21.0.0",
        "@angular/compiler": "^21.0.0",
        "@angular/core": "^21.0.0",
        "@angular/forms": "^21.0.0",
        "@angular/platform-browser": "^21.0.0",
        "@angular/router": "^21.0.0",
        "@ngrx/signals": "^21.0.1",
        "@ngx-translate/core": "^17.0.0",
        "@ngx-translate/http-loader": "^17.0.0",
        "@tauri-apps/api": "^2.9.1",
        "@tauri-apps/plugin-dialog": "^2.5.0",
        "@tauri-apps/plugin-shell": "^2.0.0",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0"
    },
    "devDependencies": {
        "@angular/build": "^21.0.4",
        "@angular/cli": "^21.0.4",
        "@angular/compiler-cli": "^21.0.0",
        "@tailwindcss/postcss": "^4.1.12",
        "@tauri-apps/cli": "^2.9.6",
        "concurrently": "^9.2.1",
        "jsdom": "^27.1.0",
        "ng-packagr": "^21.0.0",
        "postcss": "^8.5.3",
        "tailwindcss": "^4.1.12",
        "typescript": "~5.9.2",
        "vitest": "^4.0.8"
    }
}
