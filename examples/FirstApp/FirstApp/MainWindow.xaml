<Window x:Class="FirstApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"

        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="SingleBorderWindow">
    <!-- Gradient background -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F5F7FA" Offset="0"/>
                <GradientStop Color="#E3F2FD" Offset="0.5"/>
                <GradientStop Color="#E8EDF3" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Card -->
        <Border Width="600"
            Height="300"
            CornerRadius="24"
            Background="#FFFFFF"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Effect="{DynamicResource ShadowEffect}"
            RenderTransformOrigin="0.5,0.5">

            <Border.RenderTransform>
                <ScaleTransform x:Name="CardScale"
                            ScaleX="0.9"
                            ScaleY="0.9"/>
            </Border.RenderTransform>

            <!-- Content -->
            <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Opacity="0">

                <StackPanel.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.8"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </StackPanel.Triggers>

                <TextBlock Text="Hello World"
                       FontSize="56"
                       FontWeight="Bold"
                       Foreground="#263238"
                       HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#90CAF9"
                                      BlurRadius="18"
                                      ShadowDepth="0"
                                      Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="Welcome to First App 🚀"
                       FontSize="18"
                       Foreground="#607D8B"
                       Margin="0,16,0,0"
                       HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>

    <!-- Resources -->
    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                      Color="#000000"
                      BlurRadius="30"
                      ShadowDepth="0"
                      Opacity="0.25"/>

        <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>
    </Window.Resources>

</Window>
